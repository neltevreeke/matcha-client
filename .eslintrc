{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react"
  ],
  "settings": {
    "react": {
      "version": "16.11.0"
    }
  },
  "plugins": [
    "jsx-a11y",
    "react-hooks"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "no-console": [
      "error"
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "jsx-quotes": [
      "error",
      "prefer-single"
    ],
    "react/jsx-max-props-per-line": [
      1,
      {
        "maximum": 1,
        "when": "always"
      }
    ],
    "react/jsx-tag-spacing": [
      1,
      {
        "closingSlash": "never",
        "beforeSelfClosing": "always",
        "afterOpening": "never",
        "beforeClosing": "allow"
      }
    ],
    "react/jsx-closing-bracket-location": [
      1,
      "tag-aligned"
    ],
    "react-hooks/rules-of-hooks": "error",
    "react/prop-types": [
      0
    ]
  }
}
